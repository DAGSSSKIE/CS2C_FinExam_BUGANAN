function checkPalindrome(word) {
    const reversed = word.split('').reverse().join('');
    console.log(`Original: ${word}, Reversed: ${reversed}`);
    return word === reversed;
}
const word1 = prompt("Enter the first word:");
const word2 = prompt("Enter the second word:");

console.log(`Is "${word1}" a palindrome?`, checkPalindrome(word1.toUpperCase()));
console.log(`Is "${word2}" a palindrome?`, checkPalindrome(word2.toUpperCase()));
